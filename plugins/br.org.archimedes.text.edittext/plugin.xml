<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="br.org.archimedes.core.factory">
         <factory
               class="br.org.archimedes.text.edittext.EditTextFactory"
               handledElementId="br.org.archimedes.text"
               handlesDoubleClick="true"
               handlesDoubleClicks="true"
               id="br.org.archimedes.text.edittext">
         </factory>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:transform?after=complex">
         <command
               commandId="br.org.archimedes.core.factoryactivator"
               icon="icons/edittext.png"
               label="%command.edittext.label"
               mnemonic="%command.edittext.mnemonic"
               style="push"
               tooltip="%command.edittext.tooltip">
            <parameter
                  name="br.org.archimedes.core.factoryactivator.name"
                  value="br.org.archimedes.text.edittext">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:transform?after=complex">
         <command
               commandId="br.org.archimedes.core.factoryactivator"
               icon="icons/edittext.png"
               label="%command.edittext.label"
               mnemonic="%command.edittext.mnemonic"
               style="push"
               tooltip="%command.edittext.tooltip">
            <parameter
                  name="br.org.archimedes.core.factoryactivator.name"
                  value="br.org.archimedes.text.edittext">
            </parameter>
         </command>
      </menuContribution>
   </extension>
</plugin>
